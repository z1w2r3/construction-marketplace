    "progress": {
      "name": "进度分析报告",
      "name_en": "Progress Analysis Report",
      "description": "适用于项目进度分析、进度偏差分析、进度调整方案",
      "keywords": ["进度", "计划", "工期", "节点", "进展"],
      "priority": 75,
      "structure": [
        {
          "title": "项目基本情况",
          "level": 1,
          "required": true,
          "content_hints": ["项目概况", "合同工期", "总体进度目标"]
        },
        {
          "title": "计划进度与实际进度对比",
          "level": 1,
          "required": true,
          "content_hints": ["总进度计划", "实际完成情况", "进度对比", "完成百分比"]
        },
        {
          "title": "关键节点完成情况",
          "level": 1,
          "required": true,
          "content_hints": ["关键里程碑", "节点完成时间", "偏差分析"]
        },
        {
          "title": "进度偏差分析",
          "level": 1,
          "required": true,
          "content_hints": ["偏差情况", "偏差原因", "影响分析", "风险评估"]
