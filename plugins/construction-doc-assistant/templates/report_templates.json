{
  "templates": {
    "trial_project": {
      "name": "试点项目报告",
      "name_en": "Trial Project Report",
      "description": "适用于智能建造试点、示范项目等申报和总结材料",
      "keywords": ["试点", "示范", "申报", "智能建造"],
      "priority": 90,
      "structure": [
        {
          "title": "项目背景与意义",
          "level": 1,
          "required": true,
          "content_hints": ["项目基本信息", "试点背景", "申报意义", "政策支持"]
        },
        {
          "title": "试点目标与任务",
          "level": 1,
          "required": true,
          "content_hints": ["总体目标", "具体任务", "技术指标", "预期成果"]
        },
        {
          "title": "组织保障体系",
          "level": 1,
          "required": true,
          "content_hints": ["组织架构", "制度建设", "人员配置", "资源投入"]
        },
        {
          "title": "技术应用与实施",
          "level": 1,
          "required": true,
          "content_hints": ["技术方案", "实施过程", "应用范围", "关键技术"]
        },
        {
          "title": "应用成效与数据支撑",
          "level": 1,
          "required": true,
          "content_hints": ["效率提升数据", "成本节约数据", "质量改善数据", "对比分析"]
        },
        {
          "title": "创新亮点与特色",
          "level": 1,
          "required": true,
          "content_hints": ["技术创新点", "管理创新点", "与传统方式对比", "独特优势"]
        },
        {
          "title": "经验总结与推广价值",
          "level": 1,
          "required": true,
          "content_hints": ["成功经验", "遇到的问题", "解决方案", "推广建议"]
        },
        {
          "title": "持续改进计划",
          "level": 1,
          "required": false,
          "content_hints": ["下一步工作", "优化方向", "扩展应用计划"]
        }
      ],
      "focus_data": ["效率数据", "成本数据", "质量数据", "创新点"],
      "extract_depth": "detailed",
      "formal_level": "high",
      "include_cover": true,
      "include_appendix": true
    },

