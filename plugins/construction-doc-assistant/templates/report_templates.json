  "matching_rules": {
    "keyword_weight": 0.4,
    "document_type_weight": 0.3,
    "structure_weight": 0.3,
    "min_confidence": 0.6
  },

  "cover_template": {
    "include_project_logo": false,
    "include_company_info": true,
    "include_approval_table": true,
    "approval_roles": ["编制", "审核", "批准"]
  },

  "citation_format": {
    "style": "professional",
    "include_path": false,
    "include_metadata": false,
    "format": "根据《{document_name}》，{content}..."
  },

  "filtering_rules": {
    "remove_technical_metadata": true,
    "remove_statistics": true,
    "remove_file_paths": true,
    "max_emojis": 2,
    "allowed_emojis": ["✓", "×"]
  }
}
